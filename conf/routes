# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# login module
POST	/login/authWithPhone			controllers.Application.authWithPhone
POST	/login/authConfirm				controllers.Application.authConfirm
POST	/login/authWithThird			controllers.Application.authWithThird
POST	/login/connectWithThird			controllers.Application.connectWithThird
POST	/login/authUpdateDetails		controllers.Application.authUpdateDetails
POST	/login/authCreateUserWithPhone 	controllers.Application.authCreateUserWithPhone

# post modul
POST	/post/postContent				controllers.postController.postContent
POST	/post/uploadFile				controllers.postController.uploadFile
GET		/post/downloadFile/*name		controllers.postController.downloadFile(name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)